
#pragma once


namespace crib
{

	struct byte4
	{
		unsigned char x, y, z, w;
	};

	struct int2
	{
		int x, y;
	};

	struct int3
	{
		int x, y, z;
	};

	struct int4
	{
		int x, y, z, w;
	};


	struct float2
	{
		float x, y;
	};

	struct float3
	{
		float x, y, z;
	};

	struct float4
	{
		float x, y, z, w;
	};


	struct float3x3
	{
		float3 c0, c1, c2;
	};

	struct float4x4
	{
		float4 c0, c1, c2, c3;
	};

}
